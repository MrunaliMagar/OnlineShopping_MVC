@model IEnumerable<OnlineShoppingCart_MVC.Models.Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllCategories</title>
</head>
<body>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.category_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category_image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category_image)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.category_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.category_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.category_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    
</body>
</html>
