@model OnlineShoppingCart_MVC.Models.Admin

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link href="./styleLogin.css" rel="stylesheet" />
    <title>Login</title>
    <style>
        body {
            background-color: #f8f9fa; /* Set background color */
        }

        .container {
            background-color: #ffffff; /* Set container background color */
            border-radius: 10px; /* Add border radius to container */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Add box shadow to container */
            padding: 20px; /* Add padding to container */
            margin-top: 50px; /* Adjust top margin */
        }

        .table {
            width: 100%;
        }

        .table-bordered {
            border: 1px solid #dee2e6;
            margin-top: 20px; /* Adjust top margin for table */
        }

        .auto-style2 {
            width: 30%; /* Adjust width for label column */
        }

        .auto-style4 {
            width: 70%; /* Adjust width for input column */
        }

        .btn-primary {
            width: 100%; /* Make button full width */
            background-color: #007bff; /* Change button color */
            border: 1px solid #007bff; /* Change button border color */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Change button color on hover */
                border: 1px solid #0056b3; /* Change button border color on hover */
            }

        .link {
            color: #007bff; /* Change link color */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form id="form1" method="post">
                    <table class="table table-bordered">
                        <tr>
                            <td colspan="2" style="text-align:center">LOGIN</td>
                        </tr>
                        <tr>
                            <td class="auto-style2">ADMIN NAME</td>
                            <td class="auto-style4">
                                <input asp-for="admin_name" class="form-control" />
                                <span asp-validation-for="admin_name" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td class="auto-style2">PASSWORD</td>
                            <td class="auto-style4">
                                <input asp-for="admin_password" class="form-control" type="password" />
                                <span asp-validation-for="admin_password" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td class="auto-style2">&nbsp;</td>
                            <td class="auto-style4">
                                <button type="submit" class="btn btn-primary" asp-page-handler="Login">Login</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="link" colspan="2">
                                &nbsp;
                                <a asp-action="Index">Not Registered yet? Back to website</a>
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
