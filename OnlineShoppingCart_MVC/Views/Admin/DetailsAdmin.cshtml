@model OnlineShoppingCart_MVC.Models.Admin

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            padding-top: 20px;
            background-color: #f8f9fa; /* Set background color */
        }

        .container {
            max-width: 800px;
            margin: auto;
        }

        h4 {
            color: #007bff; /* Set heading color */
        }

        hr {
            border-top: 2px solid #007bff; /* Set horizontal rule color */
        }

        .row {
            margin-bottom: 20px; /* Adjust bottom margin for rows */
        }

        .col-sm-2 {
            font-weight: bold; /* Make column headers bold */
        }

        .btn {
            color: #fff; /* Set button text color */
        }

        .btn-primary {
            background-color: #007bff; /* Set primary button color */
            border: 1px solid #007bff; /* Set primary button border color */
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Set primary button color on hover */
                border: 1px solid #0056b3; /* Set primary button border color on hover */
            }
    </style>
</head>
<body>

    <div class="container">
        <h4>Admin Details</h4>
        <hr />
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.admin_name)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.admin_name)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.admin_password)
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.admin_password)
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <a asp-action="Dashboard" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
