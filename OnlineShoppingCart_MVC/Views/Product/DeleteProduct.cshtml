@model OnlineShoppingCart_MVC.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <style>
        body {
            padding-top: 20px;
        }

        .image-container {
            text-align: center;
        }

        .product-image {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>

    <div class="container">
        <h4>Product</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.product_name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.product_name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.product_description)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.product_description)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.product_mrp)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.product_mrp)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.product_offer_price)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.product_offer_price)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.product_quantity)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.product_quantity)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <div class="image-container">
                    <img src="@Model.product_image" alt="Product Image" class="product-image" />
                </div>
            </div>
            <form asp-action="DeleteProduct">
                <input type="hidden" asp-for="product_id" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="IndexProduct" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>

          
        

    @section Scripts {
        <!-- Add your script references here -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
                integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
                crossorigin="anonymous"></script>
    }
</body>
</html>
